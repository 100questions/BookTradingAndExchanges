<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_collapseMode="none"
        android:layout_weight="0.9"
        android:background="@color/gradient_start_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/btnBillDetailBack"
                android:layout_gravity="center"
                android:layout_marginStart="-10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_keyboard_arrow_left_black_24dp" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvBillDetail"
        android:layout_weight="7.5"
        android:layout_width="match_parent"
        tools:listitem="@layout/item_detail_bill"
        android:layout_height="0dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_gravity="bottom"
        android:background="@drawable/slider_radius">
        <TextView
            android:id="@+id/TitleSumPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng Tiền"
            android:layout_marginHorizontal="20dp"/>
        <TextView
            android:id="@+id/sumPriceBillDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/ReadLight"
            android:text="0 đ"
            android:layout_marginHorizontal="20dp"/>
        <Button
            android:id="@+id/btn_buy"
            android:enabled="false"
            android:layout_below="@id/TitleSumPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_radius"
            android:textColor="@color/white_color"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="15dp" />
    </RelativeLayout>
</LinearLayout>